@{
    var userName = Context.Session.GetString("UserName");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Charm CRM Sync Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="btn btn-outline-warning me-2 d-lg-none" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <a class="navbar-brand fw-bold text-warning" href="/">
                <i class="bi bi-diagram-3 me-1"></i> Charm CRM
            </a>

            <div class="ms-auto d-flex align-items-center">
                <div class="me-3 text-light small fw-semibold d-none d-md-inline">
                    <i class="bi bi-cloud-arrow-left-right me-1"></i> Sync Dashboard
                </div>

                @if (!string.IsNullOrEmpty(userName))
                {
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-light text-decoration-none dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5 me-2 text-warning"></i>
                            <span class="fw-semibold">@userName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i> Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="/Account/Settings"><i class="bi bi-gear me-2"></i> Cài đặt</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i> Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-outline-warning btn-sm fw-semibold ms-2">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                    </a>
                }
            </div>
        </div>
    </nav>

    <div class="sidebar" id="sidebarMenu">
        <a href="/" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
            <i class="bi bi-house-door me-2"></i> Dashboard
        </a>
        <a href="/Contacts" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contacts" ? "active" : "")">
            <i class="bi bi-people me-2"></i> Contacts
        </a>
        <a href="/Orders" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="bi bi-box-seam me-2"></i> Orders
        </a>
        <a href="/SyncLogs" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "SyncLogs" ? "active" : "")">
            <i class="bi bi-arrow-repeat me-2"></i> Sync Logs
        </a>
        <a href="/Settings" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
            <i class="bi bi-gear me-2"></i> Settings
        </a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="text-center text-secondary mt-auto mb-3 small">
        &copy; @DateTime.Now.Year - Charm CRM Sync Dashboard
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleBtn = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebarMenu');
        toggleBtn?.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
