@model CRM.SyncService.WebDashboard.Models.Order
@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<div class="card shadow-sm border-0 p-4 mx-auto text-center" style="max-width: 500px;">
    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 2rem;"></i>
    <h5 class="fw-bold text-dark mt-2">Xác nhận xóa đơn hàng</h5>

    <p class="text-secondary mt-2">
        Bạn có chắc muốn xóa đơn hàng <strong>@Model.OrderCode</strong> của khách hàng
        <strong>@Model.Contact?.ContactName</strong> không?
    </p>

    <dl class="row small text-start border-top pt-3 mt-3">
        <dt class="col-sm-5">Tổng tiền:</dt>
        <dd class="col-sm-7 text-success fw-semibold">@Model.TotalAmount.ToString("N0") ₫</dd>

        <dt class="col-sm-5">Trạng thái:</dt>
        <dd class="col-sm-7">@Model.Status</dd>

        <dt class="col-sm-5">Ngày tạo:</dt>
        <dd class="col-sm-7">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mt-4">
            <button type="submit" class="btn btn-danger fw-semibold px-4">
                <i class="bi bi-trash me-1"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">Hủy</a>
        </div>
    </form>
</div>
