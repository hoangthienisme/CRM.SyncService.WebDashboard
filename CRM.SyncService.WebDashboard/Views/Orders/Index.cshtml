@model IEnumerable<CRM.SyncService.WebDashboard.Models.Order>

<div class="container py-4">
    <h4 class="fw-bold mb-3">Quản lý đơn hàng</h4>
    <a href="/Orders/Create" class="btn btn-primary mb-3">+ Thêm đơn hàng</a>

    <table class="table table-hover shadow-sm">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderCode</td>
                    <td>@o.Contact?.ContactName</td>
                    <td>@o.TotalAmount.ToString("N0") ₫</td>
                    <td>@o.Status</td>
                    <td>@o.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="/Orders/Edit/@o.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="/Orders/Delete/@o.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
