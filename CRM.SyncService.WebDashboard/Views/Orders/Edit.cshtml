@model CRM.SyncService.WebDashboard.Models.Order
@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}

<div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 600px;">
    <h5 class="fw-bold text-dark mb-3">
        <i class="bi bi-pencil-square text-warning me-2"></i>Chỉnh sửa đơn hàng
    </h5>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Mã đơn</label>
            <input asp-for="OrderCode" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Khách hàng</label>
            <select asp-for="ContactId" asp-items="ViewBag.Contacts" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tổng tiền</label>
            <input asp-for="TotalAmount" class="form-control" type="number" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Trạng thái</label>
            <input asp-for="Status" class="form-control" />
        </div>

        <div class="text-end">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">Hủy</a>
            <button type="submit" class="btn btn-warning fw-semibold">Cập nhật</button>
        </div>
    </form>
</div>
