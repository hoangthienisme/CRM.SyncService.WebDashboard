@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Charm CRM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-dark text-light">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 border-0 text-dark" style="max-width:400px;width:100%;">
            <h4 class="text-center fw-bold text-warning mb-3">Charm CRM</h4>
            <h6 class="text-center text-secondary mb-4">Đăng nhập hệ thống</h6>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger small">@ViewBag.Error</div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success small">@TempData["Success"]</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Mật khẩu</label>
                    <input name="password" type="password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-warning w-100 fw-semibold">Đăng nhập</button>

                <p class="text-center mt-3 small">
                    Chưa có tài khoản?
                    <a href="/Account/Register" class="text-warning fw-semibold text-decoration-none">Đăng ký</a>
                </p>
            </form>
        </div>
    </div>
</body>
</html>
