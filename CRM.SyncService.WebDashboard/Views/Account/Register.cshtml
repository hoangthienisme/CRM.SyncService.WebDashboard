@model CRM.SyncService.WebDashboard.Models.User
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-dark">
    <div class="card shadow-lg p-4 border-0" style="max-width:400px;width:100%;">
        <h4 class="text-center fw-bold text-warning mb-3">CRM Sync Dashboard</h4>
        <h6 class="text-center text-secondary mb-4">Tạo tài khoản mới</h6>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger small">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Họ và tên</label>
                <input asp-for="FullName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <input asp-for="PasswordHash" type="password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Nhập lại mật khẩu</label>
                <input name="passwordConfirm" type="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-warning w-100 fw-semibold">Đăng ký</button>

            <p class="text-center mt-3 small">
                Đã có tài khoản? <a href="/Account/Login" class="text-warning fw-semibold text-decoration-none">Đăng nhập</a>
            </p>
        </form>
    </div>
</div>
